{
  "name": "Badge Firmware Dev Container (Linux)",
  "dockerComposeFile": [
    "../../docker-compose.yaml"
  ],
  "service": "app",
  "workspaceFolder": "/workspace",
  "runServices": [
    "app"
  ],
  "overrideCommand": true,
  "runArgs": [
    "--device=/dev/ttyUSB0:/dev/ttyUSB0",
    "--device=/dev/ttyUSB1:/dev/ttyUSB1"
  ],
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1"
  },
  "postCreateCommand": "python3 -m pip install -r requirements.txt || true",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.vscode-serial-monitor",
        "ms-python.black-formatter"
      ]
    }
  }
}